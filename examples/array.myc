	 };


	// reference assignment (copy pointer and length)	
	:dynamic_array []int64;
	dynamic_array = static_array;
	
	printf("new .data -> %d\n".data, dynamic_array.data);
	printf("new .len -> %d\n".data, dynamic_array.len);

	{
		for(:j int64 = 0; j < 20; j = j + 1) {
			printf("STATIC %d : %d\n".data, j, static_array[j]);
		}
		/*
