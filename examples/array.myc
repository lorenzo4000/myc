		*/
	};
	
	return;

	printf("----------------------------------\n".data);

	printf("sum(static_array) = %d\n".data, sum(static_array));
	printf("sum(dynamic_array) = %d\n".data, sum(dynamic_array));
	printf("sum_20(static_array) = %d\n".data, sum_20(static_array));
